    <!-- JavaScript Logic -->
    <script>
        // -------------------------------------------------------
        // Helper: Label Wrapping Logic (Strictly > 16 chars)
        // -------------------------------------------------------
        function wrapLabel(label) {
            const MAX_LENGTH = 16;
            if (label.length <= MAX_LENGTH) return label;
            
            const words = label.split(' ');
            const lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if ((currentLine + " " + words[i]).length <= MAX_LENGTH) {
                    currentLine += " " + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // -------------------------------------------------------
        // Shared Chart Configuration
        // -------------------------------------------------------
        Chart.defaults.font.family = "'Roboto', sans-serif";
        Chart.defaults.color = '#475569';
        
        const commonTooltipConfig = {
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    if (Array.isArray(label)) {
                        return label.join(' ');
                    } else {
                        return label;
                    }
                }
            }
        };

        // -------------------------------------------------------
        // Chart 1: Skills Radar Chart
        // -------------------------------------------------------
        const skillsLabelsRaw = [
            "Linguistic Accuracy", 
            "Guideline Adherence", 
            "Prompt Engineering", 
            "Technical (SQL/R)", 
            "Data Annotation", 
            "Communication"
        ];
        const skillsLabels = skillsLabelsRaw.map(wrapLabel);

        const ctxRadar = document.getElementById('skillsRadarChart').getContext('2d');
        new Chart(ctxRadar, {
            type: 'radar',
            data: {
                labels: skillsLabels,
                datasets: [{
                    label: 'Proficiency Level (0-100)',
                    data: [90, 95, 85, 75, 95, 85], // Estimated based on "Strong", "Expert", etc.
                    fill: true,
                    backgroundColor: 'rgba(37, 99, 235, 0.2)', // Blue-600 low opacity
                    borderColor: '#2563EB',
                    pointBackgroundColor: '#2563EB',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: '#2563EB'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: commonTooltipConfig
                },
                scales: {
                    r: {
                        angleLines: { color: '#E2E8F0' },
                        grid: { color: '#E2E8F0' },
                        pointLabels: {
                            font: { size: 12, weight: 'bold' },
                            color: '#1E293B'
                        },
                        suggestedMin: 50,
                        suggestedMax: 100
                    }
                }
            }
        });

        // -------------------------------------------------------
        // Chart 2: Project Breakdown (Donut)
        // -------------------------------------------------------
        // Data derived from resume: 3 Telus Projects, 2 Mindtel Projects, Continuous Freelance work.
        // Categories: Image Annotation (Telus), Text Evaluation (Mindtel), Prompt Writing (Mindtel), Educational Content (Freelance)
        
        const projectLabelsRaw = ["Image Annotation", "Text Evaluation", "Prompt Writing", "Alt Text/Content"];
        const projectLabels = projectLabelsRaw.map(wrapLabel);
        
        const ctxDonut = document.getElementById('projectDonutChart').getContext('2d');
        new Chart(ctxDonut, {
            type: 'doughnut',
            data: {
                labels: projectLabels,
                datasets: [{
                    data: [30, 25, 25, 20], // Illustrative distribution
                    backgroundColor: [
                        '#2563EB', // Blue
                        '#00E676', // Green
                        '#7C3AED', // Purple
                        '#F59E0B'  // Amber
                    ],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom', labels: { usePointStyle: true } },
                    tooltip: commonTooltipConfig
                },
                cutout: '60%'
            }
        });

        // -------------------------------------------------------
        // Chart 3: Tools Proficiency (Horizontal Bar)
        // -------------------------------------------------------
        const toolLabelsRaw = ["SQL (Queries)", "R (Analysis)", "LabelImg", "CVAT", "Excel/Sheets", "JSON/CSV"];
        const toolLabels = toolLabelsRaw.map(wrapLabel);

        const ctxBar = document.getElementById('toolsBarChart').getContext('2d');
        new Chart(ctxBar, {
            type: 'bar',
            data: {
                labels: toolLabels,
                datasets: [{
                    label: 'Proficiency',
                    data: [70, 65, 85, 80, 90, 75],
                    backgroundColor: '#00E676', // Vibrant Green
                    borderRadius: 4
                }]
            },
            options: {
                indexAxis: 'y', // Horizontal bar
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: commonTooltipConfig
                },
                scales: {
                    x: {
                        beginAtZero: true,
                        max: 100,
                        grid: { display: false }
                    },
                    y: {
                        grid: { display: false }
                    }
                }
            }
        });

    </script>
